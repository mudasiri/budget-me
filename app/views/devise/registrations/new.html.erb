<nav class = "vw-100 d-flex align-items-center btn-blue-col">
<%= link_to root_path do %>
<div class = "arrow">
  <i class="fas fa-arrow-left btn-blue-col px-2 "></i>
  </div>
 <% end %>
 <div class = "mx-auto heading">
 <h2>Sign up</h2>
 </div>
 </nav>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
        <%= f.text_field :name, required: true, autofocus: true, autocomplete: "name", class: "form-control border-0 border-bottom mt-3", placeholder: "Full name" %>
  </div>

  <div class="field">
     <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-0 border-bottom", placeholder: "Email" %>
  </div>

  <div class="field">
     <%= f.password_field :password, autocomplete: "new-password", class: "form-control border-0 border-bottom", 
    placeholder: "Password (#{@minimum_password_length} characters minimum)" %>
  </div>

  <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control border-0 border-bottom", placeholder: "Confirm Password" %>
  </div>

  <div class="actions mt-3">
    <%= f.submit "Sign up", class:'btn btn-primary btn-blue-col btn-lg' %>
  </div>
<% end %>

